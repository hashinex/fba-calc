{
  "manifest_version": 3,
  "name": "Amazon FBA Calculator",
  "version": "1.0",
  "description": "Calculate Amazon FBA profits easily.",
  "action": {
    "default_title": "Amazon FBA Calculator",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"]
    }
  ]
}
